  <%= form_for(@answer, url: home_create_path) do |f| %>
    <div>
      Name: <%= f.text_field :name %>
    </div>
    <div>
      Favorites:
      <ul>
        <li class="item">
          <%= f.check_box :chocolate %> I like <%= f.label :chocolate %>
        </li>
        <li class="item">
          <%= f.check_box :rainbows %> I like <%= f.label :rainbows %>
        </li>
        <li class="item">
          <%= f.check_box :puppies %> I like <%= f.label :puppies %>
        </li>
        <li class="item">
          <%= f.check_box :cold_hard_cash %> I like <%= f.label :cold_hard_cash %>
        </li>
      </ul>
    </div>
    <div class="input"><%= f.submit %></div>
  <% end %>
